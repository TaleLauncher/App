{
    "name": "talelauncher",
    "version": "1.0.0",
    "author": "Indiwide",
    "repository": {
        "type": "git",
        "url": "https://github.com/TaleLauncher/App.git"
    },
    "description": "A fan-made Hytale launcher written in Electron",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "dependencies": {
        "adm-zip": "^0.5.10",
        "axios": "^1.6.0",
        "electron-updater": "^6.7.3",
        "fs-extra": "^11.1.1",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^26.4.0"
    },
    "build": {
        "appId": "com.talelauncher.app",
        "productName": "TaleLauncher",
        "publish": [
            {
                "provider": "github",
                "owner": "TaleLauncher",
                "repo": "App"
            }
        ],
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "art/icon.png"
        }
    }
}