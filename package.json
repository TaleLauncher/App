{
    "name": "talelauncher",
    "version": "1.0.0",
    "description": "A fan-made Hytale launcher written in Electron",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "dependencies": {
        "adm-zip": "^0.5.10",
        "axios": "^1.6.0",
        "fs-extra": "^11.1.1",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^26.4.0"
    },
    "build": {
        "appId": "com.talelauncher.app",
        "productName": "TaleLauncher",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "art/icon.png"
        }
    }
}